<h1><%= @artist.name %>'s Paints</h1>
<hr>
<body>
<p> <%= link_to 'Index Alphabetically', "/artists/#{@artist.id}/paints?sort=abc" %> </p>
<p>
<%= form_with url:"/artists/#{@artist.id}/paints?sort=opacity", method: :get, local: true do |form| %>
  <%= form.label :opacity  %>
  <%= form.number_field :sort %>
    <div>
  <%= form.submit "Choose Your Own Opacity" %>
  </div>
<% end %>
</p>
<br>
<% @paints.each do |paint| %>
  <h3><%= link_to paint.name, "/paints/#{paint.id}" %></h3>
    Brand: <%= paint.brand %><br>
    High Pressure: <%= paint.high_pressure %><br> 
    Opacity: <%= paint.opacity %>
  <p> <%= button_to "Update #{paint.name}", "/paints/#{paint.id}/edit", method: :get %> </p>
  <p> <%= button_to "Delete #{paint.name}", "/paints/#{paint.id}", method: :delete %> </p><br><br>
<% end %>
<br>
<br>
<%= link_to 'Create Paint', "/artists/#{@artist.id}/paints/new" %>
</body>