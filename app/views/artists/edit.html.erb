<h1>Update Artist Form</h1>

<%= form_with url: "/artists/#{@artist.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br>
  <%= form.label :sponsored %> <small>(check box if true)</small> <%= form.check_box :sponsored, {}, true, false %> <br />
  <%= form.label :rank %>
  <%= form.text_field :rank %><br>
  <br>
  <div>
  <%= form.submit "Update Artist" %>
  </div>
<% end %>